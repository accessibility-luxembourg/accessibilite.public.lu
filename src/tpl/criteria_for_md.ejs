<div id="toc">
    <div id="disc-control">
        <h3 id="titre-affichage"><%= __("Display") %></h3>
        <input type="checkbox" id="open-disclosure-methodo"></input><label for="open-disclosure-methodo"> <%= __("Methodology") %></label><br />
        <input type="checkbox" id="open-disclosure-mapping"></input><label for="open-disclosure-mapping"> <%= __("Mapping") %></label><br />
    </div>
    <h3 id="titre-sommaire"><%= summaryTitle %></h3>
    <nav class="nav" aria-labelledby="titre-sommaire">
        <%- (list_type == "ol")?"<ol>":"<ul>" %>
        <% topics.forEach(topic => { %>
            <li class="<%= topic.class !== undefined ? 'summary-'+topic.class : '' %>">
                <a href="#<%= topic.id %>"><%= topic.text %></a> 
            </li>
        <% }) %>
        <%- (list_type == "ol")?"</ol>":"</ul>" %>   
    </nav> 
</div>
<div id="topics"> 
<%- data %>
</div> 