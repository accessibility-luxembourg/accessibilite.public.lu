{
  "name": "rgaa4lu",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "bash ./build.sh",
    "watch:dev": "npm-watch",
    "watch": "concurrently -k 'npm:serve' 'npm:watch:dev'",
    "serve": "http-server ./dist",
    "checklinks": "npx check-html-links dist/ --validate-externals --absolute-base-url https://accessibilite.public.lu",
    "checkaccess": "node ./test/accessTests.js",
    "checkresources": "node ./test/resourceTests.js",
    "visual": "node ./test/visualTests.js",
    "visual:update": "node ./test/visualTests.js --update-baseline",
    "test:links": "concurrently -k -s first 'npm:serve' 'npm:checklinks'",
    "test:access": "concurrently -k -s first 'npm:serve' 'npm:checkaccess'",
    "test:resources": "concurrently -k -s first 'npm:serve' 'npm:checkresources'",
    "test:visual": "concurrently -k -s first 'npm:serve' 'npm:visual'",
    "test": "npm run test:links && npm run test:access && npm run test:resources && npm run test:visual"
  },
  "watch": {
    "build": {
      "patterns": [
        "src/tpl",
        "src/css",
        "src/js",
        "content"
      ],
      "extensions": [
        "js",
        "ejs",
        "md",
        "scss",
        "json"
      ]
    }
  },
  "author": "Information and press service",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.1",
    "ejs": "^3.1.10",
    "en301549-links": "^1.0.7",
    "jsdom": "^27.3.0",
    "sharp": "^0.34.5",
    "y18n": "^5.0.8",
    "yaml": "^2.8.2",
    "cheerio": "^1.1.2",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-front-matter": "^0.2.4",
    "markdown-it-replace-link": "^1.2.2"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.10.2",
    "axe-core": "^4.10.3",
    "concurrently": "^5.3.0",
    "http-server": "^14.1.1",
    "npm-watch": "^0.13.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.11.1"
  }
}
